{
    "name": "playwright-test",
    "version": "0.0.0",
    "description": "Run mocha or tape unit tests with playwright.",
    "repository": "hugomrdias/playwright-test",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "index.js",
    "bin": "cli.js",
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "test": "nyc ava",
        "lint": "eslint --cache *.js src/*.js",
        "validate": "run-p lint test",
        "precommit": "yarn validate",
        "version": "yarn changelog && git add changelog.md",
        "changelog": "conventional-changelog -p angular -i changelog.md -s -r 0"
    },
    "files": [
        "index.js",
        "cli.js"
    ],
    "keywords": [
        "playwright",
        "test",
        "tests",
        "test-runner",
        "mocha",
        "tape"
    ],
    "dependencies": {
        "camelcase": "^5.3.1",
        "env-paths": "^2.2.0",
        "get-port": "^5.1.1",
        "globby": "^11.0.0",
        "ignore-by-default": "^1.0.1",
        "meow": "^6.0.0",
        "merge-options": "^2.0.0",
        "ora": "^4.0.3",
        "polka": "^0.5.2",
        "resolve-cwd": "^3.0.0",
        "sirv": "^0.4.2",
        "tempy": "^0.4.0",
        "webpack": "^4.41.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "assert": "^2.0.0",
        "ava": "^3.3.0",
        "conventional-changelog-cli": "^2.0.31",
        "eslint": "^4.7.1",
        "eslint-config-halo": "^2.3.3",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.7",
        "mocha": "^7.0.1",
        "np": "^6.0.0",
        "npm-run-all": "^4.1.1",
        "nyc": "^15.0.0",
        "playwright-core": "^0.10.0",
        "tape": "^4.13.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "extends": "halo/plugins",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings"
    ]
}
